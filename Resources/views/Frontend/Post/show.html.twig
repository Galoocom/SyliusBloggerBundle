{% extends 'SyliusBloggerBundle::layout.html.twig' %}

{% block content %}

<div class="page-header">
<h1>{{ post.title }}</h1>
</div>

<div class="well">
{{ post.content|raw }}

<br /> <br />
<code>Posted at {{ post.createdAt|date('Y-m-d H:i:s') }} by <strong>{{ post.author }}</strong>.</code>
</div>

{% endblock %}
