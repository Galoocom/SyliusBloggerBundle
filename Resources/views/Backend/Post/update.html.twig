{% extends 'SyliusBloggerBundle::layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Updating post.<small> Use this form to modify existing post...</small></h1>
</div>

<form action="{{ path('sylius_blogger_backend_post_update', {'id': post.id}) }}" method="post">

<fieldset>
    <div class="clearfix">
    {{ form_label(form.title, 'Title...') }}
    <div class="input">
        {{ form_widget(form.title, {'attr': {'class': 'span7'}}) }}
    </div>
    </div>
    <div class="clearfix">
    {{ form_label(form.author, 'Author...') }}
    <div class="input">
        {{ form_widget(form.author, {'attr': {'class': 'span5'}}) }}
    </div>
    </div>
    <div class="clearfix">
    {{ form_label(form.content, 'Content...') }}
    <div class="input">
        {{ form_widget(form.content, {'attr': {'class': 'span12', 'rows': 10}}) }}
    </div>
    </div>
</fieldset>

{{ form_rest(form) }}

<div class="actions">
<input type="submit" class="btn large primary" value="save changes">
</div>

</form>

{% endblock %}
