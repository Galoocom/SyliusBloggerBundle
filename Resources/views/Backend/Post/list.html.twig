{% extends 'SyliusBloggerBundle::layout.html.twig' %}

{% block content %}

<div class="page-header"> 
    <h1>Posts list.<small> Manage posts on blog.</small></h1> 
</div> 

<div class="well">
<a href="{{ path('sylius_blogger_backend_post_create') }}" class="btn large primary">create post</a>
</div>

{% if posts %}       
<table>
    <thead>
        <tr>
            <th><a href="{{ path('sylius_blogger_backend_post_list', {'sort': 'id', 'order': sorter.order}) }}">#id</a></th>
            <th><a href="{{ path('sylius_blogger_backend_post_list', {'sort': 'title', 'order': sorter.order}) }}">title</a></th>
            <th><a href="{{ path('sylius_blogger_backend_post_list', {'sort': 'author', 'order': sorter.order}) }}">author</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.author }}</td>
                <td>
                    <div class="pull-right">
                    <a href="{{ path('sylius_blogger_backend_post_show', {'id': post.id}) }}" class="btn">show</a>
                    <a href="{{ path('sylius_blogger_backend_post_update', {'id': post.id}) }}" class="btn">update</a>
                    <a href="{{ path('sylius_blogger_backend_post_delete', {'id': post.id}) }}" class="btn danger">delete</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert-message info">
<p><strong>Information.</strong> There are no posts to display.</p>
</div>
{% endif %}

{% endblock %}
